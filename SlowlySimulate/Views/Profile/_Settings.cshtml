@{
    ViewBag.Title = "_Settings";
}

<div class="settings-container">
    <!-- First Card: App Language -->
    <div class="card">
        <h2>App Language</h2>
        <!-- You can add any other components (e.g., dropdowns) to this card as needed. -->
    </div>

    <!-- Second Card: Dark Mode -->
    <div class="card">
        <h2>Dark Mode</h2>
        <label class="switch">
            <input type="checkbox">
            <span class="slider"></span>
        </label>
    </div>

    <!-- Third Card: Notifications - Slowly Web -->
    <div class="card">
        <h2>Notifications - Slowly Web</h2>
        <label class="switch">
            <input type="checkbox">
            <span class="slider"></span>
        </label>
    </div>

    <!-- Fourth Card: Privacy Settings -->
    <div class="card">
        <h2>Privacy Settings</h2>
        <label><input type="checkbox"> Show Last Online</label>
        <label><input type="checkbox"> Show Joined Date</label>
        <label><input type="checkbox"> Show Weather & Local Time</label>
    </div>

    <!-- Last Card: Slowly Tips -->
    <div class="card">
        <h2>Slowly Tips</h2>
        <label><input type="checkbox"> Confirm before sending the letter</label>
    </div>
</div>